<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
       <shape
			    android:shape="oval"
			    android:padding="0dp" >
			    <solid android:color="#FFF" />
			    <size
			        android:width="16dp"
	            android:height="16dp" />
       </shape>
    </item>
    <item android:state_checked="true">
      <shape
        android:shape="oval"
        android:padding="0dp">
        <solid android:color="#000" />
        <size
            android:width="16dp"
            android:height="16dp" />
        <stroke
            android:color="#FFF"
            android:width="3dp" />
      </shape>
    </item>
</selector>