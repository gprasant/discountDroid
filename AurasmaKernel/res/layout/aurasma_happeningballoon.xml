<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aurasma_balloon_main_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/aurasma_happeningoverlay_bg_selector"
    android:gravity="center_horizontal"
    android:minWidth="200dip"
    android:orientation="horizontal"
    android:paddingBottom="5dip"
    android:paddingLeft="10dip"
    android:paddingRight="0dip"
    android:paddingTop="0dip" >

    <LinearLayout
        android:id="@+id/aurasma_balloon_inner_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="10dip" >

        <TextView
            android:id="@+id/aurasma_happening_item_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF000000"
            android:textSize="16dip" >
        </TextView>

        <TextView
            android:id="@+id/aurasma_happening_item_snippet"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="12dip" >
        </TextView>
    </LinearLayout>

    <ImageView
        android:id="@+id/aurasma_more_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/aurasma_more_icon" />

</LinearLayout>