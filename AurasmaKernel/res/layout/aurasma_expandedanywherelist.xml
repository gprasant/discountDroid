<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aurasma_expanded_row_layout"
    style="@style/aurasma_blueLozenge"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/aurasma_big_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:gravity="center_vertical"
        android:padding="3dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/aurasma_list_text"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:maxLines="4"
            android:paddingLeft="5dp"
            android:textColor="@drawable/aurasma_blue_lozenge_text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/aurasma_delete_aura_button_linear_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right|bottom"
            android:orientation="horizontal"
            android:visibility="gone" >

            <Button
                android:id="@+id/aurasma_delete_aura_button"
                style="@style/aurasma_greenButton"
                android:background="@drawable/aurasma_subscribe_btn"
                android:focusable="false"
                android:text="@string/aurasma_deleteButtonText" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/aurasma_share_aura_button_linear_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right|bottom"
            android:orientation="horizontal"
            android:visibility="gone" >

            <Button
                android:id="@+id/aurasma_share_aura_button"
                style="@style/aurasma_greenButton"
                android:background="@drawable/aurasma_subscribe_btn"
                android:focusable="false"
                android:text="@string/aurasma_shareButtonText" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>