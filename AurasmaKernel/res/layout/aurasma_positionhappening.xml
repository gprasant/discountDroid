<?xml version="1.0" encoding="utf-8"?>
<com.aurasma.aurasma.addaura.PositionHappeningView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aurasma_happeningPositionUI"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:gravity="fill" >

    <com.aurasma.aurasma.ui.AspectFrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="fill" >

        <com.aurasma.aurasma.ui.GLContainer
            android:id="@+id/aurasma_happeningPosSurface"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="vertical" />
    </com.aurasma.aurasma.ui.AspectFrameLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dp" >
        
        <ImageButton
            android:id="@+id/aurasma_moveRotateButton"
            android:visibility="gone"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:cropToPadding="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/aurasma_posn_move_rotate_btn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dip"
            android:shadowColor="#0106000e"
            android:text="@string/aurasma_positionAuraTitle"
            android:textColor="@color/aurasma_dary_gray_no_alpha"
            android:textSize="20sp" />

        <Button
            android:id="@+id/aurasma_createHappeningButton"
            style="@style/aurasma_roundedBlueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="@string/aurasma_createhappeningtext" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dip"
            android:shadowColor="#0106000e"
            android:text="@string/aurasma_positionAuraGuide"
            android:textColor="@color/aurasma_dary_gray_no_alpha"
            android:textSize="20sp" />
    </RelativeLayout>

</com.aurasma.aurasma.addaura.PositionHappeningView>