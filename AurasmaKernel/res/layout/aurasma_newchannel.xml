<?xml version="1.0" encoding="utf-8"?>
<com.aurasma.aurasma.ui.AurasmaWindowView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aurasma_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <com.aurasma.aurasma.addaura.AddChannelView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/aurasma_newChannelUI"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/aurasma_bg_blue_tiled"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="10dp" >

        <EditText
            android:id="@+id/aurasma_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/aurasma_white_rounded_textbox"
            android:hint="@string/aurasma_channeldefaulttitle"
            android:inputType="textNoSuggestions"
            android:scrollHorizontally="true"
            android:singleLine="true" />

        <EditText
            android:id="@+id/aurasma_description"
            style="@style/aurasma_whiteTextBox"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:hint="@string/aurasma_channeldescription"
            android:inputType="textNoSuggestions"
            android:scrollHorizontally="true"
            android:singleLine="true" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/aurasma_photoButton"
                style="@style/aurasma_roundedBlueButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/aurasma_augphotobuttontext" />
        </LinearLayout>

        <ImageView
            android:id="@+id/aurasma_preview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:padding="5dp" >

            <Button
                android:id="@+id/aurasma_saveButton"
                style="@style/aurasma_roundedBlueButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aurasma_channelSavebuttontext"
                android:visibility="invisible" />
        </LinearLayout>
    </com.aurasma.aurasma.addaura.AddChannelView>

</com.aurasma.aurasma.ui.AurasmaWindowView>