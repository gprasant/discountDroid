<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <style name="aurasma_Theme.CustomDialog" parent="android:style/Theme.Dialog">
    	<item name="android:windowBackground">@drawable/aurasma_box</item>
    </style>
    
  <style name="aurasma_rounded_dark_gray_dialog" parent="android:style/Theme.Dialog">
    <item name="android:windowBackground">@drawable/aurasma_dark_grey_box</item>
  </style>
  
  <style name="aurasma_more_aura_info_dialog" parent="aurasma_rounded_dark_gray_dialog">
    <item name="android:windowNoTitle">true</item>
    <item name="android:backgroundDimEnabled">false</item>
  </style>
  
	<style name="aurasma_intro_blurb">
		<item name="android:textSize">22sp</item>
		<item name="android:textColor">#ee7620</item>
		<item name="android:shadowColor">#ee7620</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowDy">0</item>
		<item name="android:shadowRadius">10</item>
		<item name="android:textStyle">bold</item>
	</style>
	
	<style name="aurasma_label">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">#ee7620</item>
		<item name="android:textStyle">normal</item>
	</style>
	
	<style name="aurasma_view_text">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">#ffffff</item>
	</style>
	
	<style name="aurasma_helpButton">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">16sp</item>
        	<item name="android:textColor">#000</item>
		<item name="android:padding">10sp</item>
		<item name="android:gravity">left</item>
		<item name="android:layout_weight">1</item>
		<item name="android:background">@android:color/transparent</item>
	</style>
	
	
  
  <style name="aurasma_roundedBlueButton">
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">@drawable/aurasma_custom_rounded_button_text</item>
    <item name="android:background">@drawable/aurasma_custom_rounded_blue_button</item>
    <item name="android:padding">5dp</item>
    <item name="android:layout_marginTop">5dp</item>
    <item name="android:layout_marginBottom">5dp</item>
    <item name="android:layout_marginLeft">5dp</item>
    <item name="android:layout_marginRight">5dp</item>
  </style>
  
  <style name="aurasma_roundedBlueButtonLeft" parent="@style/aurasma_roundedBlueButton">
    <item name="android:textColor">@drawable/aurasma_custom_selector_button_text</item>
    <item name="android:background">@drawable/aurasma_custom_rounded_blue_button_left</item>
    <item name="android:layout_marginRight">0dp</item>
  </style>
  <style name="aurasma_roundedBlueButtonCenter" parent="@style/aurasma_roundedBlueButton">
    <item name="android:textColor">@drawable/aurasma_custom_selector_button_text</item>
    <item name="android:background">@drawable/aurasma_custom_rounded_blue_button_center</item>
    <item name="android:layout_marginLeft">0dp</item>
    <item name="android:layout_marginRight">0dp</item>
  </style>
  <style name="aurasma_roundedBlueButtonRight" parent="@style/aurasma_roundedBlueButton">
    <item name="android:textColor">@drawable/aurasma_custom_selector_button_text</item>
    <item name="android:background">@drawable/aurasma_custom_rounded_blue_button_right</item>
    <item name="android:layout_marginLeft">0dp</item>
  </style>
  
  <style name="aurasma_radioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">22dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_marginLeft">11dp</item>
    <item name="android:drawablePadding">2dp</item>
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">#FFF</item>
    <item name="android:button">@drawable/aurasma_radio_btn</item>
  </style>
  
  <style name="aurasma_whiteTextBox">
    <item name="android:background">@drawable/aurasma_white_rounded_textbox</item>
    <item name="android:padding">5dp</item>
    <item name="android:layout_marginTop">5dp</item>
    <item name="android:layout_marginBottom">5dp</item>
    <item name="android:layout_marginLeft">5dp</item>
    <item name="android:layout_marginRight">5dp</item>
  </style>
  
  <style name="aurasma_blueLozenge">
    <item name="android:background">@drawable/aurasma_blue_lozenge</item>
    <item name="android:padding">5dp</item>
  </style>
  
  <style name="aurasma_blueLozengeCheckable" parent="@style/aurasma_blueLozenge">
    <item name="android:background">@drawable/aurasma_blue_lozenge_checkable</item>
  </style>
  
  <style name="aurasma_blueLozengeButton" parent="@style/aurasma_blueLozenge">
    <item name="android:padding">10dp</item>
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">@drawable/aurasma_blue_lozenge_text</item>
  </style>
  
  
  
  <style name="aurasma_greenButton">
    <item name="android:layout_width">85dp</item>
    <item name="android:layout_height">30dp</item>
    <item name="android:layout_gravity">center_vertical</item>
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">@color/aurasma_selected_text</item>
    <item name="android:layout_marginTop">3dp</item>
    <item name="android:layout_marginBottom">3dp</item>
    <item name="android:layout_marginLeft">5dp</item>
    <item name="android:layout_marginRight">3dp</item>
  </style>
	
	<style name="aurasma_Theme.CustomTitleTheme" parent="android:Theme">
           <item name="android:windowTitleSize">32dip</item>
    </style>
    
     <style name="aurasma_AlertDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/aurasma_AlertDialogTitle</item>
    </style>

    <style name="aurasma_AlertDialogTitle" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>
			      
</resources>
